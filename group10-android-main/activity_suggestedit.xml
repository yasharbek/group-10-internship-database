<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SuggestEdit">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="50dp"
            android:text="" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="30dp"
            android:text="Suggest a program edit" />

        <EditText
            android:id="@+id/programName"
            android:layout_width="168dp"
            android:layout_height="18dp"
            android:layout_weight="1"
            android:hint="PROGRAM NAME"
            android:textSize="15dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="20dp"
            android:text="Choose program feature to edit:" />
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
            <Spinner
            android:id="@+id/editFeature"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center" />

        </LinearLayout>

        <EditText
            android:id="@+id/suggestedEdit"
            android:layout_width="176dp"
            android:layout_height="272dp"
            android:layout_weight="1"
            android:hint="PROGRAM EDIT SUGGESTION"
            android:textSize="15dp" />

        <Button
            android:id="@+id/submitEditButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit Edit"
            android:onClick="onSubmitEditButtonClick" />

        <Button
            android:id="@+id/homePageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Return to Home Page"
            android:onClick="onHomePageButtonClickClick" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>