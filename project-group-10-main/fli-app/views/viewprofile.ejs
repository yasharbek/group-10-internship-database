<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>View Profile</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <!-- custom stylesheet -->
    <link rel="stylesheet" href="../public/style.css">
  </head>
  <body>
    <nav class="navbar">
      <ul class="navlist">
        <p class="title">
          Profile view
          </p>
          <li><a href="/public/allprograms">View all programs</a></li>
          <li><a href="/allprofile">View all profiles</a></li>
          <li><a href="/allSuggestedEdits">View User Suggested Edits</a></li>
          <li><a href="/allSpotlighted">View Spotlighted Program</a></li>

      </ul>
    </nav>
  
    <div class="container">
        <div class="row h-100">
          <div class="col-lg-4"><!-- this is just here to center the next column --></div>

          <div class="col-lg-4 text-center my-auto">
            <% if (profile) { %>

              
              <p>
                Username: <b><%= profile.username %></b>
              </p>
              <p>
                Password: <b><%= profile.password %></b>
              </p>
              <p>
                Name: <b><%= profile.name %></b>
              </p>
              <p>
                Pronouns: <b><%= profile.pronouns %></b>
              </p>
              <p>
                Class Year: <b><%= profile.classyear %></b>
              </p>
              <p>
                Saved Programs:
              </p>
              <ul>
              <% profile.programs.forEach((p) => {%>
                <li><%= p %></li>                 
              <% }) %>
            </ul>
            <% } else { %>

              <p>An error occurred: there is no profile named "<%= requestedName %>"</p>

            <% } %>
          
              <p>
                <a href="/allprofile">See all profiles</a>                    
              </p>
              <p>
                <a href="/profileform">Create a new profile</a>                    
              </p>
          </div>

          <div class="col-lg-4"><!-- this is just here to center the previous column --></div>

        </div>
    </div>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
  </body>
</html>


