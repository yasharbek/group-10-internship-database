<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Edit Program</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <!-- custom stylesheet -->
    <link rel="stylesheet" href="../public/style.css">
  </head>
  <body>
    <nav class="navbar">
      <ul class="navlist">
        <p class="title">
          Editing profile
          </p>
          <li><a href="/public/allprograms">View all programs</a></li>
          <li><a href="/allprofile">View all profiles</a></li>
          <li><a href="/allSuggestedEdits">View User Suggested Edits</a></li>
          <li><a href="/allSpotlighted">View Spotlighted Program</a></li>

      </ul>
    </nav>
  
    <div class="container">
      <div class="row h-100">
          <div class="col-lg-4"><!-- this is just here to center the next column --></div>

          <div class="col-lg-4 text-center my-auto">
              <p>
                <form action="/editProfile" method="post">
                      <div class="mb-3">
                        <label class="form-label">Username (Cannot be changed)</label><!-- CHANGE THIS -->
                        <input type="text" class="form-control" name="username"  value="<%= profile.username %>" readonly>
                    </div>
                    <div class="mb-3">
                      <label class="form-label">Password</label><!-- CHANGE THIS -->
                      <input type="text" class="form-control" name="password"  value="<%= profile.password %>">
                  </div>
                  <div class="mb-3">
                    <label class="form-label">Name </label>
                    <input type="text" class="form-control" name="name" value="<%= profile.name %>">
        
                  </div>
                      <div class="mb-3">
                          <label class="form-label">Pronouns</label><!-- CHANGE THIS -->
                          <input type="text" class="form-control" name="pronouns" value="<%= profile.pronouns %>">
                      </div>
                      <div class="mb-3">
                          <label class="form-label">Class Year</label><!-- CHANGE THIS -->
                          <input type="text" class="form-control" name="classyear" value="<%= profile.classyear %>">
                      </div>
                      <div class="mb-3">
                        <label class="form-label">Saved Programs</label><!-- CHANGE THIS -->
                        <% programs.forEach((p) => {%>
                          <br>
                          <input type="checkbox" name="program" value="<%= p.name %>"><%= p.name %>                      
                        <% }) %>
                        
                        
                      </div>
                  <input type="submit" class="btn btn-primary"></button>
                </form>
              </p>
              <p>
                  <a href="/allprofile">Cancel</a>
              </p>
          </div>

          <div class="col-lg-4"><!-- this is just here to center the previous column --></div>

      </div>
  </div>
  
  

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
  </body>
</html>
