<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>View All Profiles</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">

    <!-- custom stylesheet -->
    <link rel="stylesheet" href="../public/style.css">

    <script type="text/javascript">
      <!--
      function confirmDelete(username) {
        var answer = confirm("Are sure you want to delete " + username + "?")
        if (answer){
          window.location = "/deleteprofile?username=" + username;
        }
      }
      //-->
      </script>
  </head>
  <body>
    <nav class="navbar">
      <ul class="navlist">
        <p class="title">
          Profile Database
          </p>
        <li><a href="/public/programform.html">Create a new Program</a></li>
        <li><a href="/allprograms">View all programs</a></li>
        <li><a href="/allSuggestedEdits">View User Suggested Edits</a></li>
        <li><a href="/allSpotlighted">View SpotlightedProgram</a></li>
      </ul>
    </nav>

    <div class="container">
      <div class="row h-100">
        <div class="col-lg-4"><!-- this is just here to center the next column --></div>
        <div class="col-lg-4 text-center my-auto">
            <% if (profiles && profiles.length > 0) { %>
              <p>
              Here are all the profiles in the database:
              </p>
              <p>
              <table class="table table-bordered">
                <% profiles.forEach( (profile) => { %>
                  <tr>      
                    <td>Username: <b><%= profile.username %></b></td> 
                    <td><a href="/viewprofile?username=<%= profile.username %>">View</a></td> 
                    <td><a href="/showEdit?username=<%= profile.username %>">Edit</a></td> 
                    <td><a href="javascript:confirmDelete('<%= profile.username %>')">Delete</a></td>
                  </tr>                      
                <% }) %>
              </table>
              </p>
            <% } else { %>
              <p>There are no profile objects in the database.</p>
            <% } %>
        </div>
        <footer>
          <ul class="footlist">
            <li><a href="/profileform">Create a new Profile</a></li>
            <li><a href="/all">Return to Home</a></li>
          </ul>         
        </footer>
        <div class="col-lg-4"><!-- this is just here to center the previous column --></div>
      </div>

    </div>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
  </body>
</html>
