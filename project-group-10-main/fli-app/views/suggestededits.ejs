<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>View Suggested Edits</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <!-- custom stylesheet -->
    <link rel="stylesheet" href="../public/style.css">
    <script type="text/javascript">
      <!--
      function confirmDelete(editID) {
        var answer = confirm("Are sure you want to delete " + editID + "?")
        if (answer){
          window.location = "/deleteEdit?name=" + editID;
        }
      }

      //-->
      </script>
  </head>
  <body>
    <nav class="navbar">
      <ul class="navlist">
        <p class="title">
          Suggested edits
          </p>
          <li><a href="/public/allprograms">View all programs</a></li>
          <li><a href="/allprofile">View all profiles</a></li>
          <li><a href="/allSpotlighted">View Spotlighted Program</a></li>

      </ul>
    </nav>
  
    <div class="container">
      <div class="row h-100">
        <div class="col-lg-4"><!-- this is just here to center the next column --></div>
        <div class="col-lg-4 text-center my-auto">
            <% if (suggestedEdits && suggestedEdits.length > 0) { %>
              <p>
              Here are all the suggested edits in the database:
              </p>
              <p>
              <table class="table table-bordered">
                <% suggestedEdits.forEach( (suggestedAnEdit) => { %>
                  <tr>      
                    <td><b><%= suggestedAnEdit.programToEdit %></b></td>
                    <td><b><%= suggestedAnEdit.suggestedEdit %></b></td> 
                    <td><a href="javascript:confirmDelete('<%= suggestedAnEdit.editID %>')">Delete</a></td>
                  </tr>                  
                <% }) %>
              </table>
              </p>
              <p>
                <a href="/all">See all programs</a>                    
            </p>    
            <% } else { %>
              <p>There are no suggested edit objects in the database.</p>
            <% } %>
        </div>

        <div class="col-lg-4"><!-- this is just here to center the previous column --></div>
      </div>

    </div>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
  </body>
</html>