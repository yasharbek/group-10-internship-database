<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>View Program</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <!-- custom stylesheet -->
    <link rel="stylesheet" href="../public/style.css">
  </head>
  <body>
    <nav class="navbar">
      <ul class="navlist">
        <p class="title">
          Program view
          </p>
          <li><a href="/public/allprograms">View all programs</a></li>
          <li><a href="/allprofile">View all profiles</a></li>
          <li><a href="/allSuggestedEdits">View User Suggested Edits</a></li>
          <li><a href="/allSpotlighted">View Spotlighted Program</a></li>

      </ul>
    </nav>
  
    <div class="container">
        <div class="row h-100">
          <div class="col-lg-4"><!-- this is just here to center the next column --></div>

          <div class="col-lg-4 text-center my-auto">
            <% if (program) { %>

              <p>
                Name: <b><%= program.name %></b>
              </p>
              <p>
              Link: <b><%= program.link %></b>
                </p>
              <p>
              Category: <b><%= program.category %></b>
                </p>
              <p>
                Location: <b><%= program.location %></b>
              </p>

              <p>
                Documented Status: <b><%= program.documentedStatus %></b>
              </p>
              <p>
              Deadline: <b><%= program.deadline %></b>
                </p>
              <p>
                Applicable Year: <b><%= program.applicableYear %></b>
                </p>
              <p>
                Program Start Date: <b><%= program.programDates %></b>
                </p>  
              <p>
                GPA Requirement: <b><%= program.gpaReq %></b>
                </p>
              <p>
                Alumni Email: <b><%= program.alumniEmail %></b>
                </p>
              

            <% } else { %>

              <p>An error occurred: there is no program named "<%= requestedName %>"</p>

            <% } %>

              <p>
                <a href="/all">See all programs</a>                    
              </p>
              <p>
                <a href="/public/programform.html">Create a new program</a>                    
              </p>
          </div>

          <div class="col-lg-4"><!-- this is just here to center the previous column --></div>

        </div>
    </div>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
  </body>
</html>


